<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
    <EditText 
      android:id="@+id/testText" 
      android:layout_width="match_parent" 
      android:layout_height="wrap_content">
    <requestFocus></requestFocus>
    </EditText>
    
    <Button 
      android:text="Test TTS" 
      android:id="@+id/ttsTestButton" 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    ></Button>
    
    <Button 
      android:text="Test Speech Recognition" 
      android:id="@+id/speechTestButton" 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    ></Button>
    
    <Button 
      android:text="Test Flickr Load" 
      android:id="@+id/flickrTestButton" 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    ></Button>
    
    <TextView  
      android:id="@+id/testQueryResult"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
    />
    
    <Gallery  
	  android:id="@+id/photoBar"  
	  android:layout_width="fill_parent"  
	  android:layout_height="100dp"  
	  android:spacing="10dp"  
	/>  
    
</LinearLayout>
